@model Gostopolis.Admin.Models.Users.UserInputModel

<main class="form-signin w-100 m-auto">
    <form asp-action="Create" method="post">
        <h1 class="h3 mb-3 fw-normal">Нов потребител:</h1>
        <div class="form-floating">
            <input asp-for="FirstName" type="text" class="form-control" id="floatingInput" placeholder="Име">
            <label asp-for="FirstName" for="floatingInput">Име</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="LastName" type="text" class="form-control" id="floatingInput" placeholder="Фамилия">
            <label asp-for="LastName" for="floatingInput">Фамилия</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Email" type="text" class="form-control" id="floatingInput" placeholder="Email">
            <label asp-for="Email" for="floatingInput">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="PhoneNumber" type="text" class="form-control" id="floatingInput" placeholder="Телефонен номер">
            <label asp-for="PhoneNumber" for="floatingInput">Телефонен номер</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Създай</button>
    </form>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}