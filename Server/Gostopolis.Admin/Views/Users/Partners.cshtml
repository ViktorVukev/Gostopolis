@model IEnumerable<Gostopolis.Admin.Models.Users.UserDetailsOutputModel>

<main class="container mt-5">
    <h2>Партньори на Гостополис <span class="badge text-bg-secondary">@Model.Count()</span></h2>
    <button type="button" class="btn btn-secondary">
        <a class="text-decoration-none text-white" asp-controller="Users" asp-action="All">Всички потребители</a>
    </button>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Име</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Имейл</th>
            <th scope="col">Телефонен номер</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr class="align-middle">
                <th><img class="rounded-circle" height="50" src="@user.ImageUrl"/></th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <div class="btn-group">
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">
                            Редактирай
                        </a>
                            <form asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-danger">Изтрий</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</main>