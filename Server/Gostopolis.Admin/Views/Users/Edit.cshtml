@model Gostopolis.Admin.Models.Users.EditUserInputModel

<main class="form-signin w-100 m-auto">
    <form asp-action="Update" asp-route-id="@ViewBag.Id" method="post">
        <h1 class="h3 mb-3 fw-normal">Редактирай типа:</h1>
        <div class="form-floating">
            <input asp-for="FirstName" type="text" class="form-control" id="floatingInput" placeholder="Име" value="@Model.FirstName">
            <label asp-for="FirstName" for="floatingInput">Име</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="LastName" class="form-control" id="floatingPassword" placeholder="Фамилия" value="@Model.LastName">
            <label asp-for="LastName" for="floatingPassword">Фамилия</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="PhoneNumber" class="form-control" id="floatingPassword" placeholder="Телефонен номер" value="@Model.PhoneNumber">
            <label asp-for="PhoneNumber" for="floatingPassword">Телефонен номер</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Запази</button>
    </form>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}