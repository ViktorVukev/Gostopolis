@model Gostopolis.Admin.Models.RestaurantTypes.RestaurantTypeInputModel

<main class="form-signin w-100 m-auto">
    <form asp-action="Update" asp-route-id="@ViewBag.Id" method="post">
        <h1 class="h3 mb-3 fw-normal">Редактирай типа:</h1>
        <div class="form-floating">
            <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="Име" value="@Model.Name">
            <label asp-for="Name" for="floatingInput">Име</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Description" class="form-control" id="floatingPassword" placeholder="Описание" value="@Model.Description">
            <label asp-for="Description" for="floatingPassword">Описание</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Запази</button>
    </form>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}