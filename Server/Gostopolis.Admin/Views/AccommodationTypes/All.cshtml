@model IEnumerable<Gostopolis.Admin.Models.Accommodations.AccommodationTypeOutputModel>

<main class="container mt-5">
    <h2>Всички видове места за настаняване <span class="badge text-bg-secondary">@Model.Count()</span></h2>
    <button type="button" class="btn btn-secondary">
        <a class="text-decoration-none text-white" asp-action="Add">Създай нов</a>
    </button>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Име</th>
                <th scope="col">Описание</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var type in Model)
            {
                <tr>
                    <th scope="row">@type.Id</th>
                    <td>@type.Name</td>
                    <td>@type.Description</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@type.Id" class="btn btn-warning">
                                Редактирай
                            </a>
                            <form asp-action="Delete" asp-route-id="@type.Id" method="post">
                                <button type="submit" class="btn btn-danger">Изтрий</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>