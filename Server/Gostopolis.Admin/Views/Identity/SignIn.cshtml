@model Gostopolis.Admin.Models.Identity.LoginFormModel

<main class="form-signin w-100 m-auto">
    <form asp-controller="Identity" asp-action="Login" method="post">
        <h1 class="h3 mb-3 fw-normal">Моля, влезте в профила си:</h1>
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label asp-for="Email" for="floatingInput">Имейл адрес</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Password" for="floatingPassword">Парола</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Влез</button>
    </form>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}