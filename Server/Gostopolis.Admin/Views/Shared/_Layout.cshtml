@using Gostopolis.Infrastructure
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Гостополис - Администрация</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/headers/">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <link rel="stylesheet" href="~/css/site.css" />
    
    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                @if (this.User.IsAdministrator())
                {
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">

                        <li><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-white">Начало</a></li>
                        <li><a asp-controller="Applications" asp-action="All" class="nav-link px-2 text-white">Заявки</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link px-2 text-white dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Обекти
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Restaurants" asp-action="All" class="dropdown-item px-2">Заведения</a></li>
                                <li><a asp-controller="Accommodations" asp-action="All" class="dropdown-item px-2">Места за настаняване</a></li>
                            </ul>
                        </li>
                        <li><a asp-controller="Users" asp-action="Partners" class="nav-link px-2 text-white">Партньори</a></li>
                    </ul>
                }
                <div class="text-end">
                    @if (this.User.IsAdministrator())
                    {
                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                            <li><a class="dropdown-item" asp-controller="Identity" asp-action="Logout">Излез</a></li>
                        </ul>
                    }
                    else
                    {
                        <button type="button" class="btn btn-warning">
                            <a asp-controller="Identity" asp-action="SignIn" class="nav-link px-2">Вход</a>
                        </button>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-body-secondary">Гостополис - 2024 г.</p>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-body-secondary">Начало</a></li>
                <li class="nav-item"><a asp-controller="Applications" asp-action="All" class="nav-link px-2 text-body-secondary">Заявки</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Обекти</a></li>
                <li class="nav-item"><a asp-controller="Users" asp-action="Partners" class="nav-link px-2 text-body-secondary">Партньори</a></li>
            </ul>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>